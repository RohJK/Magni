<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jelly.camera.rohjk93.kr.ac.kpu.camera_jelly" >

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAPTURE_VIDEO_OUTPUT" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Siwon Magni"
        android:largeHeap="true"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".IntroActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CaptureActivity"
            android:configChanges="screenSize|keyboardHidden"
            android:label="@string/title_activity_camera"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".CaptureCheckActivity"
            android:hardwareAccelerated="false"
            android:label="촬영사진 확인"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".InformationActivity"
            android:label="@string/title_activity_information"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".AdviceActivity"
            android:label="@string/title_activity_help"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".RecordingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SetupActivity"
            android:label="@string/title_activity_setup"
            >
        </activity>
        <activity
            android:name=".CalibrationCaptureActivity"
            android:label="@string/title_activity_calibration_capture"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".CalibrationCaptureCheckActivity"
            android:hardwareAccelerated="false"
            android:label="@string/title_activity_calibration_capture_check"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".GridLineActivity"
            android:label="@string/title_activity_grid_line"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".ImageLoadLengthMeasurementActivity"
            android:hardwareAccelerated="false"
            android:label="@string/title_activity_image_load_length_measurement" >
        </activity>
    </application>

</manifest>
